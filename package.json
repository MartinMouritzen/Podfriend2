		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.9.0",
		"webpack-merge": "^5.8.0"
	},
	"build": {
		"productName": "Podfriend",
		"buildVersion": "2.0.0",
		"extraMetadata": {
			"version": "2.0.0"
		},
		"extends": null,
		"appId": "com.podfriend",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"dist",
			"src/images",
			"node_modules",
			"package.json"
		],
		"afterSign": ".erb/scripts/notarize.js",
		"appx": {
			"applicationId": "Podfriend.Podfriend",
			"backgroundColor": "#0176e5",
			"displayName": "Podfriend",
			"identityName": "51008Podfriend.Podfriend",
			"publisher": "CN=CEE666B1-CA88-4DED-AAAE-327BEA0D24D5",
			"publisherDisplayName": "Podfriend",
			"languages": [
				"en-us"
			],
			"showNameOnTiles": "true"
		},
		"mac": {
			"icon": "./assets/icons/podfriend.icns",
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": "assets/entitlements.mac.plist",
			"entitlementsInherit": "assets/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"publish": [
				{
					"provider": "generic",
					"url": "http://update.podfriend.com"
				}
			],
			"target": [
				"nsis",
				"msi",
				"appx"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		},
		"directories": {
			"app": "release/app",
			"buildResources": "assets",
			"output": "release/build"
		},
		"extraResources": [
			"./assets/**"
		]
	},
	"collective": {
		"url": "https://www.podfriend.com"
	},
	"devEngines": {
		"node": ">=14.x",
		"npm": ">=7.x"
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"src/electron/*"
		],
		"logLevel": "quiet"
	}
}
